<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550px"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_reative"
        android:layout_width="match_parent"
        android:background="@mipmap/u13"
        android:layout_height="300px">

        <!--<com.bawei.paotui.view.CustomImage-->
            <!--android:id="@+id/menu_touxiang"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginLeft="300px"-->
            <!--android:layout_marginBottom="90px"-->
            <!--android:src="@mipmap/u15"-->
            <!--android:layout_width="160px"-->
            <!--android:layout_height="160px" />-->

        <ImageButton
            android:id="@+id/iv_head"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="210px"
            android:layout_marginTop="30px"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/u15" />
        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="220px"
            android:layout_marginBottom="30px"
            android:textSize="45px"
            android:text="小飞侠"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@mipmap/u19"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="130px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/menu_yu_e"
                android:layout_marginLeft="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128.00"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:textColor="#929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的余额"
                android:gravity="center"
                android:textSize="32px"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/u33_line"
            android:layout_gravity="center_vertical"/>


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/menu_yuo_hui"
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3张"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:textColor="#929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠卷"
                android:gravity="center"
                android:textSize="32px"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/u33_line"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/menu_ji_fen"
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:textColor="#929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="32px"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20px"
            android:background="@mipmap/u35"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10px"
                android:layout_marginLeft="45px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/u37"/>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:text="申请自由快递人"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="40px"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text=">>"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20px"
            android:background="@mipmap/u35"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10px"
                android:layout_marginLeft="45px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/u37"/>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:text="我的任务"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="40px"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:background="@mipmap/u35"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10px"
                android:layout_marginLeft="45px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/u37"/>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:text="建议反馈"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="40px"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2px"
            android:background="@mipmap/u35"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10px"
                android:layout_marginLeft="45px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/u37"/>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:text="常见问题"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="40px"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text=">>"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2px"
            android:background="@mipmap/u35"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10px"
                android:layout_marginLeft="45px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/u37"/>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:text="设置"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="40px"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text=">>"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
