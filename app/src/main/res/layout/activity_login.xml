<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <!--加载头部-->
    <include android:id="@+id/in_main_title"
        layout="@layout/activity_main_title"/>
    <EditText
        android:id="@+id/lg_et_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="手机号码"
        android:background="@null"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="700px"
        android:layout_height="3px"
        android:background="#cccccc"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/lg_et_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="密码"
        android:background="@null"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/lg_bt_log"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@mipmap/u14"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/lg_bt_logwx"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textSize="15sp"
            android:background="@mipmap/u01"
            android:gravity="center"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/lg_bt_logqq"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textSize="15sp"
                android:background="@mipmap/u01"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
