<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.homepage.RegisterActivity">

    <!--加载头部-->
    <include android:id="@+id/in_main_title"
        layout="@layout/activity_main_title"/>


    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_below="@+id/in_main_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

        <LinearLayout
            android:id="@+id/linear_register"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="#ffffff"
            android:orientation="vertical">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:hint="手机号码"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <EditText
                    android:id="@+id/cord"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:hint="短信验证码"/>
                <Button
                    android:id="@+id/getCord"
                    android:background="#ffffff"
                    android:layout_marginTop="2px"
                    android:layout_marginRight="55px"
                    android:layout_alignParentRight="true"
                    android:layout_width="200px"
                    android:layout_height="65px"
                    android:text="发送验证码"
                    android:src="@mipmap/u20"/>
                <TextView
                    android:id="@+id/now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="55px"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:text="提示信息"
                    android:textColor="#aaaaaa" />

            </RelativeLayout>

            <EditText
                android:id="@+id/rg_et_password"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:hint="设置密码"/>

                <EditText
                    android:id="@+id/rg_et_passwords"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:hint="重复密码"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_register2"
            android:layout_below="@+id/linear_register"
            android:layout_marginLeft="180px"
            android:layout_marginTop="45px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/u22"/>

            <TextView
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意并接受《注册服务条款》"/>
        </LinearLayout>

        <Button
            android:id="@+id/saveCord"
            android:layout_marginTop="45px"
            android:layout_marginLeft="25px"
            android:layout_below="@+id/linear_register2"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:background="@mipmap/u26"
            android:textSize="22px"
            android:textColor="#ffffff"
            android:text="提交"/>

    </RelativeLayout>
</RelativeLayout>
